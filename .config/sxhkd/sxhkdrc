#
# wm independent hotkeys
#

# terminal emulator
super + t
    kitty --single-instance
#	alacritty msg create-window || alacritty

# program launcher
super + r
	rofi -modes "drun,window,run" -show drun

# make sxhkd reload its configuration files:
super + ctrl + r
	pkill -USR1 -x sxhkd

# media control
XF86AudioPlay
	playerctl play-pause
XF86AudioLowerVolume
    ~/scripts/change_volume 5%- unmute
XF86AudioRaiseVolume
    ~/scripts/change_volume 5%+ unmute
XF86AudioMute
    ~/scripts/change_volume 0+ toggle
XF86MonBrightnessUp
	brightnessctl s +10%
XF86MonBrightnessDown
	brightnessctl s 10%-
	
#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {w, shift + w}
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + l
	bspc desktop -l next

# swap the current node and the biggest
super + m
	bspc node -s biggest.local

if [[ $HOSTNAME == home ]]; then
# swap monitors
super + x
      bspc node @^1:focused:/ -s @^2:focused:/ || \
      bspc node @^1:focused:/ -d ^2:focused || \
      bspc node @^2:focused:/ -d ^1:focused
fi
	
#
# state/flags
#

# set the window state
super + {shift + f, alt + f,f}
	bspc node -t {tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

if [[ $HOSTNAME = "home" ]]; then
super + {_,shift + }{n,e,u,i}
      bspc node -{f,s} {west,south,north,east}
elif [[ $HOSTNAME = "book" ]] || [[ $HOSTNAME == "pad" ]] || [[ $HOSTNAME = "suitcase"]]; then
# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}
fi

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {l,y}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# move/resize
#

# quick launch

super + b
        brave

super + s
        flameshot gui
#~/scripts/screenshot_x11
